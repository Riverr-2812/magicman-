<script>

	document.getElementById("send").addEventListener("submit", function (event) {
		event.preventDefault();

		var tenNguoiDat = document.getElementById("tenNguoiDat").value;
		var soDienThoai = document.getElementById("soDienThoai").value;
		var diachinguoidat = document.getElementById("diachinguoidat").value;

		Swal.fire({
			title: 'Xác nhận đơn hàng',
			html: `
				<p>Bạn có chắc chắn muốn đặt hàng không?</p>
				<p><strong>Tên người đặt hàng:</strong> ${tenNguoiDat}</p>
				<p><strong>Số điện thoại:</strong> ${soDienThoai}</p>
				<p><strong>Địa chỉ:</strong> ${diachinguoidat}</p>
			`,
			icon: 'info',
			showCancelButton: true,
			confirmButtonText: 'Xác nhận',
			cancelButtonText: 'Hủy bỏ',
			customClass: {
				backdrop: 'swal2-backdrop-custom', // Lớp CSS tùy chỉnh cho phần nền
				container: 'swal2-container-custom' // Lớp CSS tùy chỉnh cho container
			}
		}).then((result) => {
			if (result.isConfirmed) {
				// Gửi dữ liệu sau khi xác nhận
				var formData = new FormData(document.getElementById("send"));
				var xhr = new XMLHttpRequest();
				xhr.open("POST", "/Admin/SanPham/Thanhtoan", true);
				xhr.onload = function () {
					// Xử lý kết quả sau khi gửi dữ liệu
					console.log(xhr.responseText);

					// Hiển thị cửa sổ xác nhận thành công và chờ người dùng nhấn OK
					Swal.fire({
						title: 'Đơn hàng đã được đặt thành công!',
						icon: 'success',
						customClass: {
							backdrop: 'swal2-backdrop-custom',
							container: 'swal2-container-custom'
						},
					}).then(() => {
						// Sau khi người dùng nhấn OK, thực hiện submit biểu mẫu
						document.getElementById("send").submit();
					});
				};
				xhr.send(formData);
			}
		});
	});

</script>
